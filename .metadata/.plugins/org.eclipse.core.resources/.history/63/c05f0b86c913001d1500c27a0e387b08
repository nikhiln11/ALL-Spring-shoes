package com.dbssecurity.ford.controller;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class DBSJPASecurityController {
    
    @RequestMapping("/user")
    public String helloUser() {
        
        return "<h1>Welcome to User Page</h1>";
    }
    @RequestMapping("/admin")
    public String helloAdmin() {
            
            return "<h1>Welcome to Admin Page</h1>";
        }
    
    @RequestMapping("/home")
    public String helloHome() {
        
        return "<h1>Welcome to Home   Page for All</h1>";
    }
}
